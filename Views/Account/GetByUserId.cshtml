@{
    Layout = "_Layout";
}
@model List<AccountListModel>

<div class="row mt-4">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kullanici Bilgileri</h5>
                <p class="card-text">@ViewBag.FullName</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Kullanici Listesine Geri DÃ¶n</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        @if (Model.Count >= 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Heasp Numarasi : @item.ApplicationUserId</h5>
                        <p class="card-text">Bakiye : @item.Balance</p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-AccountId = "@item.Id" class="btn btn-primary">Send Money</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                <p class="lead">
                    Kullanici Hesabi Bulunmamaktadir.
                </p>
            </div>
        }

    </div>
</div>