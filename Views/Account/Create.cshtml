@{
    Layout = "_Layout";
}
@model UserListModel

<div class="row mt-3">
    <div class="col-6">
        <h3>Hesap Eklenicek Kişi Bilgileri</h3>

        <p>Kullanıcı Adı
        <p class="badge bg-danger">@Model.Name</p>
        </p>

        <p>Kullanıcı Soyadı
        <p class="badge bg-danger">@Model.LastName</p>
        </p>

        <p>Aktif Hesap Sayısı
        <p class="badge bg-danger">
            <GetAccountCount application-user-id="@Model.Id"></GetAccountCount>
        </p>
        </p>
    </div>

    <div class="col-6">
        <form method="post" asp-action="Create"   asp-controller="Account">
            <div class=mb-3><input type="hidden"  name="ApplicationUserId" /></div>
            <div class=mb-3>
                <label class="form-label">Hesap Numarası : </label>
                <input type="text" class="form-control" name="AccountNumber" />
            </div>
            <div class=mb-3>
                <label class="form-label">Hesap Bakiye : </label>
                <input type="text" class="form-control" name="Balance" />
            </div>
            <div class=mb-3>
                <button class="btn btn-primary" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>